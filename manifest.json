{
  "manifest_version": 2,
  "name": "Feliratok Blacklist",
  "version": "1.0.0",
  "description": "Hide uninteresting content on the feliratok.info page",
  "permissions": [
    "tabs",
    "*://*.feliratok.info/*",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "24": "icons/icon24.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    "images/*.png"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "*://*.feliratok.info/*"
      ],
      "js": [
        "util.js",
        "content.js"
      ]
    }
  ]
}