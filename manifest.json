{
  "manifest_version": 2,
  "name": "Feliratok Blacklist",
  "version": "1.0.0",
  "description": "Hide uninteresting content on the feliratok.info page",
  "permissions": [
    "tabs",
    "*://*.feliratok.info/*",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "images/*.png"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "*://*.feliratok.info/*"
      ],
      "js": [
        "util.js",
        "content.js"
      ]
    }
  ]
}